{
  "name": "p20-app-backend",
  "version": "0.1.0",
  "description": "Backend for the Poland 2.0 app for user and ticketing services",
  "main": "build/index.js",
  "repository": "git@github.com:jakow/p20-app-backend.git",
  "author": "Jakub Kowalczyk <jakub.kowalczyk@poland20.com>",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=8.4.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV='production' pm2 start build/index.js --name app",
    "stop": "pm2 stop app && pm2 delete app",
    "build": "tsc",
    "watch": "tsc --watch",
    "serve": "nodemon --inspect build/index.js",
    "develop": "cross-env NODE_ENV='development' concurrently \"yarn watch\" \"yarn serve\" --names \"tsc,server\"",
    "clean": "rimraf build",
    "test": "nyc mocha --timeout 120000 -r ts-node/register -r source-map-support/register -r test/setup.ts \"src/**/*.test.ts\"",
    "coverage": "open coverage/index.html",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "precommit": "npm run lint"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "**/*.test.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/axios-mock-adapter": "^1.9.0",
    "@types/bcrypt": "^1.0.0",
    "@types/chai": "^4.0.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/common-tags": "^1.4.0",
    "@types/dotenv": "^4.0.1",
    "@types/http-status-codes": "^1.0.29",
    "@types/koa": "^2.0.39",
    "@types/koa-bodyparser": "^3.0.24",
    "@types/koa-logger": "^2.0.2",
    "@types/koa-router": "^7.0.23",
    "@types/lodash": "^4.14.77",
    "@types/mocha": "^2.2.43",
    "@types/mongoose": "^4.7.21",
    "@types/shortid": "^0.0.29",
    "@types/sinon": "^2.3.3",
    "axios-mock-adapter": "^1.9.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^3.5.0",
    "husky": "^0.14.3",
    "mocha": "^3.5.0",
    "mockgoose": "^7.3.3",
    "nodemon": "^1.12.0",
    "nyc": "^11.2.1",
    "rimraf": "^2.6.1",
    "sinon": "^3.2.1",
    "source-map-support": "^0.4.18",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "tslint-config-airbnb-base": "^0.1.0",
    "typescript": "^2.5.2"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "bcrypt": "^1.0.3",
    "common-tags": "^1.4.0",
    "core-js": "^2.5.1",
    "cross-env": "^5.0.5",
    "dotenv": "^4.0.0",
    "http-status-codes": "^1.3.0",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-logger": "^3.0.1",
    "koa-router": "^7.2.1",
    "lodash": "^4.17.4",
    "mongoose": "^4.11.11",
    "pm2": "^2.7.2",
    "shortid": "^2.2.8"
  }
}
